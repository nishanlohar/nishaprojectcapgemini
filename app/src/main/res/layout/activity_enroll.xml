<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagetwo">
    <TextView
        android:id="@+id/enrolltxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll For:"
        android:textSize="35dp"
        android:textColor="#800080"
        android:textStyle="bold"
        android:gravity="center"
        android:typeface="sans"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/pimg"
        android:layout_width="149dp"
        android:layout_height="161dp"
        app:srcCompat="@drawable/patient"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/enrolltxt"
        />


    <Button
        android:id="@+id/Pbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="𝑷𝑨𝑻𝑰𝑬𝑵𝑻"
        android:background="@drawable/rounded_button_transparent"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/pimg"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/dimg"
        android:layout_width="149dp"
        android:layout_height="161dp"
        app:srcCompat="@drawable/doctor"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/pimg"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/Dbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_transparent"
        android:text="𝑫𝑶𝑪𝑻𝑶𝑹"
        android:layout_marginTop="300dp"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/dimg"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/nimg"
        android:layout_width="149dp"
        android:layout_height="161dp"
        app:srcCompat="@drawable/nurse"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/dimg"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/Nbtn"
        android:layout_width="194dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_transparent"
        android:text="𝑵𝑼𝑹𝑺𝑬"
        android:layout_marginTop="520dp"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/nimg"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

